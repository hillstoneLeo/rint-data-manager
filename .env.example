# RINT Data Manager Environment Variables
# Copy this file to .env and modify the values as needed
# Environment variables override config.yml values

# Server Configuration
RINT_SERVER_HOST=0.0.0.0
RINT_SERVER_PORT=8000
RINT_SERVER_DEBUG=true
RINT_SERVER_RELOAD=true

# Database Configuration
RINT_DATABASE_URL=sqlite:///rint_data_manager.db
RINT_DATABASE_ECHO=false

# DVC Configuration
RINT_DVC_STORAGE_PATH=dvc_storage
RINT_DVC_REMOTE_NAME=local_storage
RINT_DVC_UPLOADS_DVC_PROJECT=/tmp/rdm/uploads
RINT_DVC_UPLOAD_DIRECTORY=/tmp/rdm/uploads
RINT_DVC_MAX_FILE_SIZE=104857600
RINT_DVC_ALLOWED_EXTENSIONS=.csv,.json,.txt,.xlsx,.parquet,.h5,.pkl,.py,.ipynb

# DVC Remote Server Configuration
RINT_DVC_REMOTE_SERVER_ENABLED=true
RINT_DVC_REMOTE_SERVER_AUTH_ENABLED=true
RINT_DVC_REMOTE_SERVER_AUTH_METHOD=database
RINT_DVC_REMOTE_SERVER_AUTH_DATABASE_AUTH_REQUIRE_ADMIN=false
RINT_DVC_REMOTE_SERVER_AUTH_DATABASE_AUTH_ALLOWED_USERS=
RINT_DVC_REMOTE_SERVER_AUTH_BASIC_AUTH_USERNAME=dvc_user
RINT_DVC_REMOTE_SERVER_AUTH_BASIC_AUTH_PASSWORD=dvc_password
RINT_DVC_REMOTE_SERVER_AUTH_CUSTOM_AUTH_HEADER_NAME=X-DVC-Token
RINT_DVC_REMOTE_SERVER_AUTH_CUSTOM_AUTH_TOKEN=your-custom-token-here
RINT_DVC_REMOTE_SERVER_SSL_VERIFY=true
RINT_DVC_REMOTE_SERVER_READ_TIMEOUT=300
RINT_DVC_REMOTE_SERVER_CONNECT_TIMEOUT=300

# Authentication Configuration
RINT_AUTH_JWT_SECRET_KEY=your-secret-key-here-change-in-production
RINT_AUTH_JWT_ALGORITHM=HS256
RINT_AUTH_JWT_EXPIRATION_MINUTES=1440
RINT_AUTH_PASSWORD_MIN_LENGTH=8
RINT_AUTH_EMAIL_SUFFIX_REGEX=.*@hillstonenet\.com$|.*@Hillstonenet\.com$

# CORS Configuration
RINT_CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
RINT_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
RINT_CORS_ALLOWED_HEADERS=*

# Logging Configuration
RINT_LOGGING_LEVEL=INFO
RINT_LOGGING_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
RINT_LOGGING_FILE=log/app.log

# Timing Debug Configuration
RINT_TIMING_DEBUG_ENABLED=false
RINT_TIMING_DEBUG_LOG_LEVEL=INFO
RINT_TIMING_DEBUG_INCLUDE_FRONTEND=false

# Docker/Deployment Configuration
SERVER_PORT=8000
SERVER_IP=127.0.0.1
PROXY_IP=
PROXY_PORT=
DOCKER_CLIENT_A_SSH_PORT=2222
DOCKER_CLIENT_B_SSH_PORT=2223